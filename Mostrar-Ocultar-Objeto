<html lang="pt-BR">
    <head>
        <meta charset="UTF-8">
        <meta name="author" content="Flavio Couto">
        <meta name="description" content="Codigo produzido durante as aulas">
        <meta name="description" content="Curso desenvolvimento Web AndrÃ© Fontenelle">

        <title>Mostrar e Esconder Elementos</title>
        <style>
			#janela { width:300px; height:300px; background-color:#069; margin-top:20px }
		</style>
        
        <script src="jquery-3.2.1.min.js"></script>
        <script>
			$( function(e) {			
				$('#mostrar').click( mostrarObjeto )
				$('#esconder').click( esconderObjeto )
				$('#reverso').click( reverterObjeto )
			})
			
			function esconderObjeto() {
			     $('#janela').hide(300); 
			}   
            
			function mostrarObjeto() {
				$('#janela').show(500)
			};

			function reverterObjeto() {
			     $('#janela').toggle(300);
			}
		</script>        
    </head>

    <body>
        <input type="button" id="mostrar" 	value="Mostrar" />
        <input type="button" id="esconder" 	value="Esconder" />
        <input type="button" id="reverso" 	value="Reverso" />
        
        <div id="janela"></div>
    </body>

</html>
